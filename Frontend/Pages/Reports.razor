@page "/reports"
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Care App</PageTitle>

<h1>Reports</h1>

@if (reports == null || reports == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Report date</th>
                <th>Created by</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in reports)
            {
                var client = clients.FirstOrDefault(c => c.Id == report.ClientId);
                var hasPriority = report.HasPriority;
                <tr class="@(hasPriority ? "red-text" : "")">
                    <td>@client?.FirstName @client?.LastName</td>
                    <td>@report.Subject</td>
                    <td>@report.Text</td>
                    <td>@report.CreatedAt.ToString(" HH:mm, dd MMM, yyyy")</td>
                    <td>@report.CreatedBy</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string? authToken = "";
    private Report[]? reports;
    private Client[]? clients;

    protected override async Task OnInitializedAsync()
    {
        authToken = (await localStorage.GetItemAsync<string>("authToken"))?.Trim('"');

        if (string.IsNullOrEmpty(authToken))
        {
            Navigation.NavigateTo("/login");
            return;
        }

        Http.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Token", authToken);
        reports = await Http.GetFromJsonAsync<Report[]>($"/Employee/GetReports");
        clients = await Http.GetFromJsonAsync<Client[]>($"/Employee/GetClients");
    }

    public class Client
    {
        public required string FirstName { get; set; }
        public required string LastName { get; set; }
        public required DateTime BirthDate { get; set; }
        public required string Gender { get; set; }
        public required string Id { get; set; }
    }

    public class Report
    {
        public required string Subject { get; set; }
        public required string Text { get; set; }
        public required bool HasPriority { get; set; }
        public required string CarePlanGoalId { get; set; }
        public required string ClientId { get; set; }
        public required string CreatedBy { get; set; }
        public DateTime CreatedAt { get; set; }
    }
}
